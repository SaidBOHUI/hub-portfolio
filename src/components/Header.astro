---
import ThemeToggle from "./ThemeToggle.astro";
import { profile } from "../data/sites";
---

<header class="sticky top-0 z-50 border-b border-border backdrop-blur-xl backdrop-saturate-[180%] animate-fade-in" style="background: var(--glass-bg);">
  <div class="max-w-[1200px] mx-auto px-6 py-4 flex items-center justify-between">
    <!-- Brand -->
    <div class="flex items-center gap-4">
      <div class="grid grid-cols-2 gap-[3px]" aria-hidden="true">
        <span class="w-2 h-2 rounded-sm bg-muted-foreground/40"></span>
        <span class="w-2 h-2 rounded-sm bg-muted-foreground/40"></span>
        <span class="w-2 h-2 rounded-sm bg-muted-foreground/40"></span>
        <span class="w-2 h-2 rounded-sm bg-accent animate-glow"></span>
      </div>
      <div>
        <h1 class="text-[1.05rem] font-semibold tracking-tight leading-tight">{profile.name}</h1>
        <p class="text-xs text-muted-foreground font-normal">{profile.role}</p>
      </div>
    </div>

    <!-- Nav -->
    <nav class="flex items-center gap-2">
      <a
        href={profile.github}
        target="_blank"
        rel="noopener noreferrer"
        class="flex items-center gap-2 px-3.5 py-2 text-sm font-medium border border-border rounded-ui bg-card transition-all duration-200 hover:bg-muted hover:border-muted-foreground/30"
      >
        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="currentColor">
          <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
        </svg>
        <span class="hidden sm:inline">GitHub</span>
      </a>
      <ThemeToggle />
    </nav>
  </div>
</header>
