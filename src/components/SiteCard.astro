---
import type { Site } from "../data/sites";

interface Props {
  site: Site;
  index: number;
}

const { site, index } = Astro.props;
---

<article class="card" style={`animation-delay: ${index * 80}ms`}>
  <a href={site.url} target="_blank" rel="noopener noreferrer" class="card-link">
    <div class="screenshot-wrapper">
      <img src={site.screenshot} alt={`AperÃ§u de ${site.title}`} loading="lazy" />
      <div class="screenshot-overlay">
        <span class="visit-label">
          Visiter
          <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round">
            <path d="M7 17L17 7M17 7H7M17 7v10"/>
          </svg>
        </span>
      </div>
    </div>
  </a>

  <div class="card-body">
    <div class="card-header">
      <h3>{site.title}</h3>
      {site.github && (
        <a href={site.github} target="_blank" rel="noopener noreferrer" class="github-link" title="Voir le code source">
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
            <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
          </svg>
        </a>
      )}
    </div>
    <p class="description">{site.description}</p>
    <div class="tags">
      {site.tags.map((tag) => (
        <span class="tag">{tag}</span>
      ))}
    </div>
  </div>
</article>

<style>
  .card {
    background: hsl(var(--card));
    border: 1px solid hsl(var(--border));
    border-radius: var(--radius);
    overflow: hidden;
    transition: all 300ms cubic-bezier(0.4, 0, 0.2, 1);
    animation: fadeUp 500ms ease-out both;
  }

  .card:hover {
    border-color: hsl(var(--muted-foreground) / 0.25);
    box-shadow:
      0 4px 24px -4px hsl(var(--shadow-color) / 0.15),
      0 0 0 1px hsl(var(--border));
    transform: translateY(-2px);
  }

  .card-link {
    display: block;
  }

  .screenshot-wrapper {
    position: relative;
    aspect-ratio: 16 / 10;
    overflow: hidden;
    background: hsl(var(--muted));
  }

  .screenshot-wrapper img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 500ms cubic-bezier(0.4, 0, 0.2, 1);
  }

  .card:hover .screenshot-wrapper img {
    transform: scale(1.04);
  }

  .screenshot-overlay {
    position: absolute;
    inset: 0;
    background: hsl(var(--accent) / 0);
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 300ms ease;
  }

  .card:hover .screenshot-overlay {
    background: hsl(var(--accent) / 0.12);
    backdrop-filter: blur(2px);
  }

  .visit-label {
    display: flex;
    align-items: center;
    gap: 0.35rem;
    padding: 0.5rem 1rem;
    background: hsl(var(--accent));
    color: hsl(var(--accent-foreground));
    border-radius: calc(var(--radius) - 2px);
    font-size: 0.8rem;
    font-weight: 600;
    letter-spacing: 0.02em;
    opacity: 0;
    transform: translateY(8px);
    transition: all 300ms cubic-bezier(0.4, 0, 0.2, 1);
  }

  .card:hover .visit-label {
    opacity: 1;
    transform: translateY(0);
  }

  .card-body {
    padding: 1.15rem;
    display: flex;
    flex-direction: column;
    gap: 0.6rem;
  }

  .card-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 0.5rem;
  }

  h3 {
    font-size: 0.95rem;
    font-weight: 600;
    letter-spacing: -0.01em;
    line-height: 1.3;
  }

  .github-link {
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
    width: 30px;
    height: 30px;
    border-radius: calc(var(--radius) - 4px);
    color: hsl(var(--muted-foreground));
    transition: all var(--transition);
  }

  .github-link:hover {
    background: hsl(var(--muted));
    color: hsl(var(--foreground));
  }

  .description {
    font-size: 0.82rem;
    color: hsl(var(--muted-foreground));
    line-height: 1.55;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.35rem;
    margin-top: 0.15rem;
  }

  .tag {
    display: inline-block;
    padding: 0.2rem 0.55rem;
    font-size: 0.7rem;
    font-weight: 500;
    font-family: var(--font-mono);
    background: hsl(var(--tag-bg));
    color: hsl(var(--tag-fg));
    border-radius: calc(var(--radius) - 4px);
    border: 1px solid hsl(var(--border));
    letter-spacing: 0.01em;
  }
</style>
